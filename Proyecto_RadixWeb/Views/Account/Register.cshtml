@model Proyecto_RadixWeb.Models.MultipleClassRegistrar
@{
    ViewBag.Title = "Register";
}



<div class="container">
    <div class="row">
        <div class="" style="width:450px;margin-left: 25%;height: 200px;">
            <div class="form-login" style="margin-top: 5%;">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4 style="margin-left: 37%;height: 30px;">Registrarse</h4>
                    <div class="form-group" style="height: 40px;">
                        @Html.LabelFor(model => model.objEmpresas.Emp_Nom, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.objEmpresas.Emp_Nom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.objEmpresas.Emp_Nom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" style="height: 40px;">
                        @Html.LabelFor(m => m.objRegistrar.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.objRegistrar.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" style="height: 40px;">
                        @Html.LabelFor(m => m.objRegistrar.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.objRegistrar.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" style="height: 40px;">
                        @Html.LabelFor(m => m.objRegistrar.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.objRegistrar.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>




                    <div class="wrapper" style="margin-left: 35%;">
                        <span class="group-btn">
                            <input type="submit" value="Registrase" class="btn btn-primary btn-md" />

                        </span>

                    </div>

                }
            </div>

        </div>
    </div>
</div>












